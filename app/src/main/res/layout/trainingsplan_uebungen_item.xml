<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp"
    android:outlineSpotShadowColor="@color/background"
    android:layout_marginTop="-4.3dp">
    <!-- android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@drawable/round_items_dark">

        <TextView
            android:id="@+id/uebungUeberschriftTrainingsplan"
            android:layout_width="144dp"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="169dp"
            android:layout_marginBottom="21dp"
            android:layout_toEndOf="@+id/uebungImageTrainingsplan"
            android:gravity="start"
            android:text="Line 1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/uebungImageTrainingsplan"
            android:layout_width="66dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/kg"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="137dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="KG" />

        <TextView
            android:id="@+id/kgText"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/kg"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="137dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="50" />

        <TextView
            android:id="@+id/sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Sets" />

        <TextView
            android:id="@+id/setsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sets"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="3" />

        <TextView
            android:id="@+id/repeats"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Rp." />

        <TextView
            android:id="@+id/repeatsText"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/repeats"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="12" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
